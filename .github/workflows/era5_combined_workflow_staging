## Combined ERA5 Workflow

name: "Combined ERA5 Workflow"

on:
  pull_request:
    types:
      - opened
      - synchronize
    branches:
      - staging

jobs:
  # Job 1: era5_source_to_staging_job
  deploy_era5_source_to_staging:
    name: "Deploy era5_source_to_staging_job"
    runs-on: ubuntu-latest
    if: github.base_ref == 'staging' && github.head_ref == 'dev-main'  # Check if PR is from dev-main to staging

    steps:
      # Check out this repo, so that this workflow can access it.
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main
      

      - run: databricks bundle deploy
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  run_era5_source_to_staging:
    name: "Run era5_source_to_staging_job"
    runs-on: ubuntu-latest
    needs:
      - deploy_era5_source_to_staging

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main
      

      - run: databricks bundle run era5_source_to_staging_job --refresh-all
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  # Job 2: era5_source_to_bronze_country_boundaries_job
  deploy_era5_source_to_bronze_country_boundaries:
    name: "Deploy era5_source_to_bronze_country_boundaries_job"
    runs-on: ubuntu-latest
    needs:
      - run_era5_source_to_staging

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main

      - run: databricks bundle deploy
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  run_era5_source_to_bronze_country_boundaries:
    name: "Run era5_source_to_bronze_country_boundaries_job"
    runs-on: ubuntu-latest
    needs:
      - deploy_era5_source_to_bronze_country_boundaries

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main

      - run: databricks bundle run era5_source_to_bronze_country_boundaries_job --refresh-all
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  # Job 3: era5_staging_to_bronze_interpolation_job
  deploy_era5_staging_to_bronze_interpolation:
    name: "Deploy era5_staging_to_bronze_interpolation_job"
    runs-on: ubuntu-latest
    needs:
      - run_era5_source_to_bronze_country_boundaries

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main

      - run: databricks bundle deploy
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  run_era5_staging_to_bronze_interpolation:
    name: "Run era5_staging_to_bronze_interpolation_job"
    runs-on: ubuntu-latest
    needs:
      - deploy_era5_staging_to_bronze_interpolation

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main

      - run: databricks bundle run era5_staging_to_bronze_interpolation_job --refresh-all
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  # Job 4: era5_bronze_to_silver_country_indices_job
  deploy_era5_bronze_to_silver_country_indices:
    name: "Deploy era5_bronze_to_silver_country_indices_job"
    runs-on: ubuntu-latest
    needs:
      - run_era5_staging_to_bronze_interpolation

    steps:
      - uses: actions/checkout@v3
      # Download the Databricks CLI.
      # See https://github.com/databricks/setup-cli
      - uses: databricks/setup-cli@main

      - run: databricks bundle deploy
        working-directory: ./era5-daily/Combined_Run
        env:
          DATABRICKS_HOST: ${{ secrets.DATABRICKS_HOST_STAGING }}
          DATABRICKS_CLIENT_ID: ${{ secrets.DATABRICKS_CLIENT_ID_DEVELOPMENT }}
          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  run_era5_bronze_to_silver_country_indices:
    name: "Run era5_bronze_to_silver_country_indices_job"
    runs-on: ubuntu-latest
    needs:
      - deploy_era5_bronze_to_silver_country_indices

    steps:
      - uses: actions/checkout@v3
