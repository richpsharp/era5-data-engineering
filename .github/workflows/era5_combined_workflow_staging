          DATABRICKS_CLIENT_SECRET: ${{ secrets.DATABRICKS_CLIENT_SECRET_DEVELOPMENT }}

  # Job 6: era5_bronze_to_silver_strict_join_job
  deploy_era5_bronze_to_silver_strict_join:
    name: "Deploy era5_bronze_to_silver_strict_join_job"
